<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.RowConstraints?>
<GridPane alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
          fx:controller="edu.southeast.ex3b.FutureValueController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>


  <rowConstraints>
    <RowConstraints minHeight="12.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    <RowConstraints minHeight="12.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    <RowConstraints minHeight="12.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    <RowConstraints minHeight="12.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    <RowConstraints minHeight="12.0" prefHeight="30.0" vgrow="SOMETIMES"/>




  </rowConstraints>

  <Label text="monthly Investment " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
  <Label text="Yearly Interest Rate " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
  <Label text="Number of Years " GridPane.columnIndex="0" GridPane.rowIndex="2"/>
  <Label text="Future Value " GridPane.columnIndex="0" GridPane.rowIndex="3"/>

  <TextField fx:id="InvestmentField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
  <TextField fx:id="InterestRateField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
  <TextField fx:id="YearsField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
  <TextField fx:id="FutureValueField" GridPane.columnIndex="1" GridPane.rowIndex="3" disable="true"/>

  <Button text="Calculate!" onAction="#calculateFutureValue" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
</GridPane>
